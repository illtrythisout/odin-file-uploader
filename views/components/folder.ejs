<div class="folder">
  <div class="flex-horizontal">
    <img src="/icons/folder.svg" alt="folder" />
    <a href="<%= `/drive/${folder.id}` %>">
      <p><b><%= folder.name || 'Untitled folder' %></b></p>
    </a>
  </div>
  <form
    action="/drive/delete-folder/<%= folder.id %>"
    method="post"
    class="deleteItemForm"
  >
    <button type="submit" class="transparent-button">
      <img src="/icons/delete.svg" alt="delete" />
    </button>
  </form>
</div>
<hr />
